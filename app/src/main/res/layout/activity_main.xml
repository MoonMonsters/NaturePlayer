<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chalmers.activity.MainActivity"
    android:background="@drawable/base_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:background="@drawable/base_titlebar_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/id_tv_video"
                android:text="视频"
                android:textSize="15sp"
                android:textColor="@color/color_selector"
                android:layout_height="match_parent" />

            <TextView
                android:gravity="center"
                android:id="@+id/id_tv_audio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="音乐"
                android:textSize="15sp"
                android:textColor="@color/color_selector"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:id="@+id/id_view_indicator"
            android:background="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_vp_listing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
